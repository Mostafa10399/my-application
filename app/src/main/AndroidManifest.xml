<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.quran">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainClasses.QuranSora"
            android:label="@string/title_activity_quran_sora"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".MainClasses.ToolBarQuran"
            android:label="@string/title_activity_tool_bar_quran"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Quran"
            android:label="@string/title_activity_quran" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/noActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>